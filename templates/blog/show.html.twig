{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h1>Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Moment</th>
                <td>{{ blog.moment ? blog.moment|date('Y-m-d H:i:s T') : '' }}</td>
            </tr>
            <tr>
                <th>Tekst</th>
                <td>{{ blog.tekst }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ blog.published ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('blog_index') }}">back to list</a>

    <a href="{{ path('blog_edit', {'id': blog.id}) }}">edit</a>

    {{ include('blog/_delete_form.html.twig') }}
{% endblock %}
